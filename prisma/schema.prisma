datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id          String   @id
  shop        String
  state       String
  isOnline    Boolean  @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
  firstName   String?
  lastName    String?
  email       String?
  accountOwner Boolean @default(false)
  locale      String?
  collaborator Boolean? @default(false)
  emailVerified Boolean? @default(false)
}

model Shop {
  id             String    @id @default(cuid())
  shopifyDomain  String    @unique
  shopName       String
  accessToken    String
  plan           Plan      @default(TRIAL)
  credits        Int       @default(25)
  maxCredits     Int       @default(25)
  installedAt    DateTime  @default(now())
  Product        Product[]
  Scan           Scan[]
  Optimization   Optimization[]
  Alert          Alert[]
  Event          Event[]
  BlogPost       BlogPost[]
}

model Product {
  id             String    @id @default(cuid())
  shopId         String
  shopifyId      String?
  shopifyGid     String?
  title          String
  description    String?
  handle         String
  tags           String?
  citationRate   Int       @default(0)
  chatgptRate    Int       @default(0)
  geminiRate     Int       @default(0)
  totalScans     Int       @default(0)
  lastScanAt     DateTime?
  lastOptimizedAt DateTime?
  status         ProductStatus @default(ACTIVE)
  createdAt      DateTime  @default(now())
  lastScanId     String?   // ðŸ†• Link to latest scan for context
  Shop           Shop      @relation(fields: [shopId], references: [id], onDelete: Cascade)
  Scan           Scan[]
  Optimization   Optimization[]
  OptimizationSuggestion OptimizationSuggestion[]
  BlogPost       BlogPost[]

  @@index([shopId])
  @@index([shopifyId])
  @@index([lastScanId])
}

model Scan {
  id             String    @id @default(cuid())
  shopId         String
  productId      String
  platform       Platform
  question       String
  fullResponse   String
  isCited        Boolean   @default(false)
  citation       String?
  citationPosition Int?
  competitors    String[]  // Already exists - good!
  confidence     Float?
  creditsUsed    Int       @default(1)
  scanDuration   Int?
  createdAt      DateTime  @default(now())
  
  // ðŸ†• ENHANCED INTELLIGENCE FIELDS
  shopMentioned         Boolean?  // Was the shop name mentioned?
  shopBeforeCompetitors Boolean?  // Did shop appear before competitors?
  competitorPositions   Json?     // {"amazon": 45, "ebay": 120, ...}
  
  // ðŸ†• SEMANTIC ANALYSIS
  keywordsInResponse    String[]  // Top keywords AI used
  topicsCovered         String[]  // Topics AI discussed
  topicsMissing         String[]  // Topics from product NOT in response
  sentimentScore        Int?      // -100 to 100
  
  // ðŸ†• FEATURE ANALYSIS  
  mentionedFeatures     String[]  // Product features AI mentioned
  ignoredFeatures       String[]  // Product features AI ignored
  preferredTerms        Json?     // {"our term": "AI's term", ...}
  
  Shop           Shop      @relation(fields: [shopId], references: [id], onDelete: Cascade)
  Product        Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([productId])
  @@index([platform])
  @@index([createdAt])
}

model Optimization {
  id          String   @id @default(cuid())
  shopId      String
  productId   String
  
  // Original values (for rollback)
  originalTitle    String?
  originalDesc     String?
  originalTags     String?
  
  // New optimized values
  newTitle         String?
  newDescription   String?
  newTags          String?
  newFaq           Json?
  metaTitle        String?
  metaDescription  String?
  
  // ðŸ†• CONTEXT & REASONING
  scanContext      Json?       // Snapshot of scan data that informed this
  reasoning        String?     // Why these changes help
  improvements     String[]    // ["Added warranty info", "Included reviews", ...]
  
  // Status tracking
  status           OptimizationStatus @default(PENDING)
  appliedAt        DateTime?
  creditsUsed      Int         @default(1)
  createdAt        DateTime    @default(now())
  
  Shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  Product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([productId])
  @@index([status])
}

model Alert {
  id          String   @id @default(cuid())
  shopId      String
  type        String   // ðŸ†• CITATION_DROP, NEW_COMPETITOR, PERFORMANCE_ISSUE
  severity    Severity @default(INFO)
  title       String   // ðŸ†• Alert title
  message     String
  productId   String?  // ðŸ†• Link to product if relevant
  metadata    Json?    // ðŸ†• Additional context
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  readAt      DateTime? // ðŸ†• When was it read
  
  Shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([isRead])
  @@index([createdAt])
}

model Event {
  id          String   @id @default(cuid())
  shopId      String
  eventType   String   // PRODUCT_SYNC, SCAN_COMPLETE, OPTIMIZATION_APPLIED, etc.
  entityId    String?  // ðŸ†• Product ID, Scan ID, etc.
  entityType  String?  // ðŸ†• PRODUCT, SCAN, OPTIMIZATION
  eventData   String?
  metadata    Json?    // ðŸ†• Additional structured data
  createdAt   DateTime @default(now())
  
  Shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([eventType])
  @@index([createdAt])
}

model OptimizationSuggestion {
  id          String   @id @default(cuid())
  productId   String
  type        OptimizationType
  field       String
  originalContent String?
  suggestedContent String
  reason      String
  priority    Int      @default(5)
  status      OptimizationStatus @default(PENDING)
  appliedAt   DateTime?
  createdAt   DateTime @default(now())
  
  Product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([status])
}

model BlogPost {
  id          String   @id @default(cuid())
  shopId      String
  productId   String?
  title       String
  content     String
  slug        String
  status      BlogStatus @default(DRAFT)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt // ðŸ†• Track updates
  
  Shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  Product     Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@unique([shopId, slug])
  @@index([shopId])
  @@index([productId])
  @@index([status])
}

enum Plan {
  TRIAL
  STARTER
  GROWTH
  PRO
}

enum Platform {
  CHATGPT
  GEMINI
}

enum ProductStatus {
  ACTIVE
  ARCHIVED
}

enum Severity {
  INFO
  WARNING
  ERROR
  CRITICAL  // ðŸ†• For urgent alerts
}

enum OptimizationType {
  TITLE
  DESCRIPTION
  TAGS
  META
  FAQ       // ðŸ†• For FAQ sections
  BLOG_POST
}

enum OptimizationStatus {
  PENDING
  APPLIED
  REJECTED
  REVERTED  // ðŸ†• If optimization was rolled back
}

enum BlogStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}