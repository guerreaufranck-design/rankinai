datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Session {
  id          String   @id
  shop        String
  state       String
  isOnline    Boolean  @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
  firstName   String?
  lastName    String?
  email       String?
  accountOwner Boolean @default(false)
  locale      String?
  collaborator Boolean? @default(false)
  emailVerified Boolean? @default(false)
}

model Shop {
  id             String    @id @default(cuid())
  shopifyDomain  String    @unique
  shopName       String
  accessToken    String
  plan           Plan      @default(LITE)
  billingInterval String   @default("MONTHLY") // "MONTHLY" or "ANNUAL"
  credits        Int       @default(25)
  maxCredits     Int       @default(25)
  installedAt    DateTime  @default(now())
  
  // ðŸ†• GEOGRAPHICAL CONTEXT FOR CONTEXT-AWARE COMPETITOR DETECTION
  shopCity       String?   // Ex: "Arona", "Paris", "London"
  shopRegion     String?   // Ex: "Canary Islands", "ÃŽle-de-France", "Greater London"
  shopCountry    String?   // Ex: "Spain", "France", "United Kingdom"
  shopTimezone   String?   // Ex: "Atlantic/Canary", "Europe/Paris"
  
  // ðŸ†• BUSINESS CONTEXT FOR SMART COMPETITOR FILTERING
  businessModel  String?   @default("ecommerce") // "ecommerce", "rental", "subscription", "marketplace", "service"
  businessNiche  String?   // Ex: "baby products", "fashion", "electronics"
  targetMarket   String?   @default("international") // "local", "regional", "national", "international"
  
  // ðŸ†• CONTEXT METADATA
  contextUpdatedAt DateTime? // Date de derniÃ¨re mise Ã  jour du contexte
  contextSource    String?   // "manual", "auto-detected", "shopify-api"
  
  Product        Product[]
  Scan           Scan[]
  Optimization   Optimization[]
  Alert          Alert[]
  Event          Event[]
  BlogPost       BlogPost[]
}

model Product {
  id             String    @id @default(cuid())
  shopId         String
  shopifyId      String?
  shopifyGid     String?
  title          String
  description    String?
  handle         String
  tags           String?
  citationRate   Int       @default(0)
  chatgptRate    Int       @default(0)
  geminiRate     Int       @default(0)
  totalScans     Int       @default(0)
  lastScanAt     DateTime?
  lastOptimizedAt DateTime?
  status         ProductStatus @default(ACTIVE)
  createdAt      DateTime  @default(now())
  lastScanId     String?   // Link to latest scan for context
  Shop           Shop      @relation(fields: [shopId], references: [id], onDelete: Cascade)
  Scan           Scan[]
  Optimization   Optimization[]
  OptimizationSuggestion OptimizationSuggestion[]
  BlogPost       BlogPost[]

  @@index([shopId])
  @@index([shopifyId])
  @@index([lastScanId])
}

model Scan {
  id             String    @id @default(cuid())
  shopId         String
  productId      String
  platform       Platform
  question       String
  fullResponse   String
  isCited        Boolean   @default(false)
  citation       String?
  citationPosition Int?
  competitors    String[]
  confidence     Float?
  creditsUsed    Int       @default(1)
  scanDuration   Int?
  createdAt      DateTime  @default(now())
  
  // ENHANCED INTELLIGENCE FIELDS
  shopMentioned         Boolean?
  shopBeforeCompetitors Boolean?
  competitorPositions   Json?
  
  // SEMANTIC ANALYSIS
  keywordsInResponse    String[]
  topicsCovered         String[]
  topicsMissing         String[]
  sentimentScore        Int?
  
  // FEATURE ANALYSIS  
  mentionedFeatures     String[]
  ignoredFeatures       String[]
  preferredTerms        Json?
  
  Shop           Shop      @relation(fields: [shopId], references: [id], onDelete: Cascade)
  Product        Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([productId])
  @@index([platform])
  @@index([createdAt])
}

model Optimization {
  id          String   @id @default(cuid())
  shopId      String
  productId   String
  
  // Original values (for rollback)
  originalTitle    String?
  originalDesc     String?
  originalTags     String?
  
  // New optimized values
  newTitle         String?
  newDescription   String?
  newTags          String?
  newFaq           Json?
  metaTitle        String?
  metaDescription  String?
  
  // CONTEXT & REASONING
  scanContext      Json?
  reasoning        String?
  improvements     String[]
  
  // Status tracking
  status           OptimizationStatus @default(PENDING)
  appliedAt        DateTime?
  creditsUsed      Int         @default(1)
  createdAt        DateTime    @default(now())
  
  Shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  Product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([productId])
  @@index([status])
}

model Alert {
  id          String   @id @default(cuid())
  shopId      String
  type        String
  severity    Severity @default(INFO)
  title       String
  message     String
  productId   String?
  metadata    Json?
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  readAt      DateTime?
  
  Shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([isRead])
  @@index([createdAt])
}

model Event {
  id          String   @id @default(cuid())
  shopId      String
  eventType   String
  entityId    String?
  entityType  String?
  eventData   String?
  metadata    Json?
  createdAt   DateTime @default(now())
  
  Shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@index([shopId])
  @@index([eventType])
  @@index([createdAt])
}

model OptimizationSuggestion {
  id          String   @id @default(cuid())
  productId   String
  type        OptimizationType
  field       String
  originalContent String?
  suggestedContent String
  reason      String
  priority    Int      @default(5)
  status      OptimizationStatus @default(PENDING)
  appliedAt   DateTime?
  createdAt   DateTime @default(now())
  
  Product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([status])
}

model BlogPost {
  id          String   @id @default(cuid())
  shopId      String
  productId   String?
  title       String
  content     String
  slug        String
  status      BlogStatus @default(DRAFT)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  Shop        Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)
  Product     Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@unique([shopId, slug])
  @@index([shopId])
  @@index([productId])
  @@index([status])
}

enum Plan {
  LITE
  STARTER
  GROWTH
  PRO
}

enum Platform {
  CHATGPT
  GEMINI
}

enum ProductStatus {
  ACTIVE
  ARCHIVED
}

enum Severity {
  INFO
  WARNING
  ERROR
  CRITICAL
}

enum OptimizationType {
  TITLE
  DESCRIPTION
  TAGS
  META
  FAQ
  BLOG_POST
}

enum OptimizationStatus {
  PENDING
  APPLIED
  REJECTED
  REVERTED
}

enum BlogStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}
